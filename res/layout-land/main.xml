<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center" android:background="@drawable/background_land">
	<LinearLayout
		android:layout_width="fill_parent"
		android:id="@+id/LinearLayout1"
		android:orientation="vertical"
		android:layout_above="@+id/imageButton_settings"
		android:layout_height="fill_parent"
		android:gravity="center">
		<TextView
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/textView_date"
            android:textSize="23sp"
            android:text="@string/confirm"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" />
		<DigitalClock
			android:layout_gravity="center"
			android:textStyle="bold"
			android:text="DigitalClock"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/digitalClock1"
			android:textSize="50sp" />
		<LinearLayout
			android:layout_width="fill_parent"
			android:id="@+id/linearLayout1_1"
			android:layout_marginTop="20dip"
			android:layout_height="wrap_content"
			android:gravity="center">
			<Button
				android:id="@+id/button_startWork"
				android:layout_width="wrap_content"
				android:text="@string/work_start"
				android:width="100dip"
				android:layout_height="wrap_content"
				android:height="60dip"
				android:layout_marginRight="5dip"></Button>
			<Button
				android:id="@+id/button_endWork"
				android:layout_width="wrap_content"
				android:text="@string/work_end"
				android:width="100dip"
				android:layout_height="wrap_content"
				android:height="60dip"
				android:layout_marginRight="5dp" android:layout_marginLeft="5dp"></Button>
			<Button
				android:width="100dip"
				android:layout_width="wrap_content"
				android:height="60dip"
				android:layout_height="wrap_content"
				android:id="@+id/button_startOut"
				android:text="@string/out_start" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
			<Button
				android:width="100dip"
				android:layout_width="wrap_content"
				android:height="60dip"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:id="@+id/button_endOut"
				android:text="@string/out_end"></Button>

			<Button
			    android:id="@+id/Button_settings"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_margin="5px"
			    android:background="@android:drawable/ic_menu_manage" />

		</LinearLayout>
	</LinearLayout>

</RelativeLayout>